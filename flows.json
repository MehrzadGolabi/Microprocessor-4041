    {
        "id": "hex-to-rgb",
        "type": "function",
        "z": "07a06fb2f702371f",
        "name": "HEX → R,G,B → PWM%",
        "func": "const mode = flow.get('mode2') || 'CATHODE';\nlet hex = String(msg.payload || '').trim();\nif (hex.startsWith('#')) hex = hex.slice(1);\nif (hex.length === 3) hex = hex.split('').map(c=>c+c).join('');\nconst r = parseInt(hex.slice(0,2),16);\nconst g = parseInt(hex.slice(2,4),16);\nconst b = parseInt(hex.slice(4,6),16);\nfunction toPWM(v){\n  let v255 = v;\n  if (mode === 'ANODE') v255 = 255 - v255;\n  return Math.round((v255/255)*100);\n}\nreturn [ {payload: toPWM(r)}, {payload: toPWM(g)}, {payload: toPWM(b)} ];",
        "outputs": 3,
        "timeout": "",
        "noerr": 0,
