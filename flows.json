    {
        "id": "4dbb2a1e3a9a6f22",
        "type": "function",
        "z": "b0b7e4d2f5a0c1aa",
        "name": "To °C (one decimal)",
        "func": "let raw = (msg.payload||\"\").toString().trim();\nlet val;\nif (/^\\d+$/.test(raw)) {\n    val = parseInt(raw,10) / 1000;\n} else {\n    const m = raw.match(/([0-9]+(\\.[0-9]+)?)/);\n    val = m ? parseFloat(m[1]) : NaN;\n}\nmsg.payload = isFinite(val) ? Number(val.toFixed(1)) : null;\nmsg.topic = \"CPU Temperature\";\nreturn msg;",
        "outputs": 1,
        "timeout": "",
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 580,
